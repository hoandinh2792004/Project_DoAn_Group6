<script>
    var searchInput = document.querySelector('#searchInput');
    var productList = document.querySelector('#product-list-user');
    var darkOverlay = document.querySelector('#dark-overlay');
    var listeningBox = document.querySelector('#listening-box');

    // Thiết lập nhận diện giọng nói
    const recognition = new window.webkitSpeechRecognition();
    recognition.lang = 'vi-VN';
    recognition.continuous = false;
    recognition.interimResults = false;

    // Xử lý sự kiện bắt đầu nhận diện giọng nói
    recognition.onstart = function () {
        toggleListeningMode(true); // Hiển thị giao diện "Đang nghe"
    };

    // Xử lý kết quả nhận diện giọng nói
    recognition.onresult = function (event) {
        let finalTranscript = '';

        for (let i = event.resultIndex; i < event.results.length; i++) {
            if (event.results[i].isFinal) {
                let result = event.results[i][0].transcript.trim();
                finalTranscript += result;
            }
        }

        if (finalTranscript) {
            finalTranscript = normalizeQuery(finalTranscript); // Chuẩn hóa chuỗi

            searchInput.value = finalTranscript; // Đồng bộ text vào ô tìm kiếm
            performSearch(finalTranscript);     // Gửi query tìm kiếm
            toggleListeningMode(false);
        }
    };

    // Xử lý khi kết thúc việc nhận diện giọng nói
    recognition.onspeechend = function () {
        recognition.stop();
        toggleListeningMode(false);
    };

    // Lắng nghe sự kiện click biểu tượng micro
    document.querySelector('#mic-icon').addEventListener('click', function () {
        recognition.start(); // Bắt đầu nhận diện giọng nói
    });

    // Đồng bộ khi người dùng gõ vào ô tìm kiếm
    searchInput.addEventListener('input', function () {
        const query = normalizeQuery(searchInput.value); // Chuẩn hóa chuỗi nhập vào
        performSearch(query); // Thực hiện tìm kiếm
    });

    // Xử lý lỗi nhận diện
    recognition.onerror = function (event) {
        console.error('Recognition error:', event.error);
        toggleListeningMode(false);
    };

    // Hiển thị hoặc ẩn giao diện "Đang nghe"
    function toggleListeningMode(isListening) {
        if (isListening) {
            darkOverlay.style.display = 'block'; // Hiển thị nền tối
            listeningBox.style.display = 'block'; // Hiển thị hộp "Đang nghe"
        } else {
            darkOverlay.style.display = 'none'; // Ẩn nền tối
            listeningBox.style.display = 'none'; // Ẩn hộp
        }
    }

    // Hàm chuẩn hóa chuỗi tìm kiếm
    function normalizeQuery(query) {
        return query
            .toLowerCase() // Đảm bảo tìm kiếm không phân biệt chữ hoa/thường
            .trim()         // Loại bỏ khoảng trắng thừa ở đầu/cuối
            .replace(/\s+/g, ' ') // Chuẩn hóa khoảng trắng thừa giữa các từ
            .replace(/\.$/, '');   // Loại bỏ dấu chấm ở cuối chuỗi
    }

    // Hàm thực hiện tìm kiếm qua AJAX
    function performSearch(query) {
        if (!query.trim()) {
            fetchAllProducts(); // Gọi API lấy tất cả sản phẩm
            return;
        }

        $.ajax({
            type: "POST",
            url: "@Url.Action("Search", "User")",
            data: { query: query },
            success: function (data) {
                productList.innerHTML = data;
            },
            error: function () {
                alert("Không thể tải dữ liệu. Vui lòng thử lại.");
            }
        });
    }

    // Hàm lấy tất cả sản phẩm khi không có tìm kiếm
    function fetchAllProducts() {
        $.ajax({
            type: "GET", // Hoặc POST nếu cần
            url: "@Url.Action("GetAllProducts", "User")", // URL lấy tất cả sản phẩm
            success: function (data) {
                productList.innerHTML = data; // Hiển thị danh sách tất cả sản phẩm
            },
            error: function () {
                alert("Không thể tải dữ liệu. Vui lòng thử lại.");
            }
        });
    }

    // Function to fetch all products
    function fetchAllProducts() {
        $.ajax({
            type: "POST",
            url: "@Url.Action("FetchAllProducts", "User")", // API trả về toàn bộ sản phẩm
            success: function (data) {
                productList.innerHTML = data; // Hiển thị danh sách tất cả sản phẩm
            },
            error: function () {
                alert("Không thể tải tất cả sản phẩm. Vui lòng thử lại.");
            }
        });
    }

    // Add click event to search icon
    document.querySelector('#search-icon-1').addEventListener('click', function () {
        performSearch(searchInput.value);
    });

    // Trigger search on Enter key press
    searchInput.addEventListener('keypress', function (event) {
        if (event.key === 'Enter') {
            performSearch(searchInput.value);
        }
    });


    document.querySelector('#image-search-icon').addEventListener('click', function () {
        document.querySelector('#imageInput').click(); // Mở cửa sổ chọn ảnh
    });

    document.querySelector('#imageInput').addEventListener('change', function (event) {
        var file = event.target.files[0];

        if (file) {
            // Hiển thị thông báo tìm kiếm
            document.querySelector('#product-list-user').innerHTML = "<p>Đang tìm kiếm sản phẩm theo hình ảnh...</p>";

            var formData = new FormData();
            formData.append('image', file);

            // AJAX gửi ảnh lên server
            $.ajax({
                type: "POST",
                url: "@Url.Action("SearchByImage", "User")",  // Đảm bảo URL của controller và action chính xác
                data: formData,
                contentType: false,
                processData: false,
                success: function (data) {
                    if (data) {
                        document.querySelector('#product-list-user').innerHTML = data; // Hiển thị danh sách sản phẩm
                    } else {
                        document.querySelector('#product-list-user').innerHTML = "<p>Không tìm thấy sản phẩm phù hợp.</p>";
                    }
                },
                error: function () {
                    document.querySelector('#product-list-user').innerHTML = "<p>Đã xảy ra lỗi khi tìm kiếm sản phẩm. Vui lòng thử lại.</p>";
                }
            });
        }
    });


</script>


