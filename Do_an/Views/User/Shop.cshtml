.wave-container {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 5px;
    margin-bottom: 10px;
}

/* Sóng động */
.wave {
    width: 8px;
    height: 30px;
    background-color: #ff5722;
    animation: wave-animation 1.2s infinite;
    border-radius: 4px;
}

.wave:nth-child(1) {
    animation-delay: 0s;
}

.wave:nth-child(2) {
    animation-delay: 0.2s;
}

.wave:nth-child(3) {
    animation-delay: 0.4s;
}

/* Hiệu ứng động */
@@keyframes wave-animation {
    0%, 100% {
        transform: scaleY(1);
    }
    50% {
        transform: scaleY(2.5);
    }
}

