@model IEnumerable<Do_an.Data.Product>

<div class="container-xxl py-5">
        <div class="row gx-4">
            @foreach (var product in Model)
            {
                <div class="col-md-6 col-lg-4 col-xl-3">
                    <div class="product-item">
                        <div class="position-relative">
                            <img class="img-fluid" src="@product.ImageUrl" alt="@product.Name">
                            <div class="product-overlay">
                                <a class="btn btn-square btn-secondary rounded-circle m-1 add-to-cart"
                                   data-name="@product.Name"
                                   data-price="@product.Price.ToString("C")"
                                   data-img="@product.ImageUrl"
                                   onclick="showLoginPrompt()">
                                <i class="bi bi-cart"></i>
                                </a>
                            </div>
                        </div>
                        <div class="text-center p-4">
                            <a class="d-block h5" href="#">@product.Name</a>
                        <span class="text-primary me-1">@product.Price.ToString("N0").Replace(",", ".")đ</span>
                        @*                              <span class="text-decoration-line-through">120.000đ</span> <!-- Optional discount -->
 *@                        </div>
                    </div>
                </div>
            }
        </div>
    <script src="~/js/modal.js"></script>

</div>

